{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*.tsx", "src/controllers/**/*.ts"],
  "multerOpts": {
    "limits": {
      "fileSize": 104857600
    }
  },
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "scopes": []
          }
        }
      }
    }
  },
  "routes": {
    "esm": true,
    "routesDir": "src",
    "iocModule": "src/ioc",
    "authenticationModule": "src/authentication",
    "noWriteIfUnchanged": true
  }
}
