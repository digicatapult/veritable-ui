{
  "name": "veritable-ui",
  "version": "0.8.43",
  "description": "UI for Veritable",
  "main": "src/index.ts",
  "type": "module",
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "engines": {
    "node": "^22.0.0",
    "npm": "^10.0.0"
  },
  "scripts": {
    "depcheck": "depcheck",
    "test:unit": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./src/**/*.test.ts",
    "test:integration": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./test/**/*.test.ts",
    "check": "npm run tsoa:build && tsc --noEmit",
    "build": "npm run tsoa:build && tsc",
    "tsoa:build": "tsoa spec-and-routes",
    "tsoa:watch": "node --watch-path=./src ./node_modules/.bin/tsoa -- spec-and-routes",
    "dev": "npm run tsoa:watch & NODE_ENV=dev node --import=tsimp/import --watch src/index.ts | pino-colada",
    "dev:init": "NODE_ENV=dev node --import=tsimp/import src/init.ts | pino-colada",
    "init": "node build/init.js",
    "start": "node build/index.js",
    "db:cmd": "node --import=tsimp/import ./node_modules/.bin/knex",
    "db:migrate": "npm run db:cmd -- migrate:latest",
    "db:rollback": "npm run db:cmd -- migrate:rollback",
    "db:seed": "npm run db:cmd -- seed:run",
    "lint": "prettier -c ./src ./test ./seeds ./public",
    "lint:fix": "npm run lint -- -w",
    "xss-scan": "xss-scan"
  },
  "dependencies": {
    "@digicatapult/tsoa-oauth-express": "^0.1.36",
    "@kitajs/html": "^4.2.1",
    "@kitajs/ts-html-plugin": "^4.0.2",
    "@tsoa/runtime": "^6.4.0",
    "@types/compression": "^1.7.5",
    "argon2": "^0.41.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "htmx-ext-json-enc": "^2.0.1",
    "htmx.org": "^2.0.2",
    "knex": "^3.1.0",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "tsyringe": "^4.8.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/chai": "^4.3.19",
    "@types/chai-jest-snapshot": "^1.3.8",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.16.2",
    "@types/nodemailer": "^6.4.15",
    "@types/pino-http": "^5.8.4",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.5.12",
    "chai": "^5.1.1",
    "chai-jest-snapshot": "^2.0.0",
    "depcheck": "^1.4.7",
    "mocha": "^10.7.3",
    "pino-colada": "^2.2.2",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "sinon": "^18.0.0",
    "supertest": "^7.0.0",
    "tsimp": "^2.0.11",
    "undici": "^6.19.8"
  }
}
