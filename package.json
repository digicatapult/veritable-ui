{
  "name": "veritable-ui",
  "version": "0.21.6",
  "description": "UI for Veritable",
  "main": "src/index.ts",
  "type": "module",
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "engines": {
    "node": "24.x",
    "npm": "11.x"
  },
  "scripts": {
    "depcheck": "depcheck",
    "test:unit": "NODE_OPTIONS='--no-experimental-strip-types' NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json --file ./test/init-unit.ts ./src/**/*.test.ts",
    "test:integration": "NODE_OPTIONS='--no-experimental-strip-types' NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json --file ./test/init.ts ./test/**/*.test.ts",
    "test:integration:reuse": "REUSE=true NODE_OPTIONS='--no-experimental-strip-types' NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json --file ./test/init.ts ./test/**/*.test.ts",
    "test:e2e": "playwright test --trace on --max-failures=1",
    "test:playwright": "NODE_ENV=test playwright test --ui",
    "check": "npm run tsoa:build && tsc --noEmit",
    "build": "npm run tsoa:build && swc ./src -d ./build --strip-leading-paths --copy-files",
    "tsoa:build": "tsoa spec-and-routes",
    "tsoa:watch": "node --watch-path=./src ./node_modules/.bin/tsoa spec-and-routes",
    "dev": "concurrently \"npm run tsoa:watch\" \"SWCRC=true NODE_ENV=dev node --import @swc-node/register/esm-register --enable-source-maps --watch-path=./src --watch-path=./build/swagger.json ./src/index.ts | pino-pretty -c -S\"",
    "dev:init": "NODE_ENV=dev node --import @swc-node/register/esm-register src/init.ts | pino-pretty -c -S",
    "init": "node build/init.js",
    "start": "node build/index.js",
    "db:cmd": "node --import @swc-node/register/esm-register ./node_modules/.bin/knex",
    "db:migrate": "npm run db:cmd -- migrate:latest",
    "db:rollback": "npm run db:cmd -- migrate:rollback",
    "db:seed": "npm run db:cmd -- seed:run",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "xss-scan": "xss-scan"
  },
  "dependencies": {
    "@digicatapult/tsoa-oauth-express": "^2.0.50",
    "@kitajs/html": "^4.2.11",
    "@kitajs/ts-html-plugin": "^4.1.3",
    "@tsoa/runtime": "^6.6.0",
    "@types/compression": "^1.8.1",
    "argon2": "^0.44.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "envalid": "^8.1.1",
    "express": "^5.1.0",
    "htmx-ext-json-enc": "^2.0.3",
    "htmx-ext-response-targets": "^2.0.4",
    "htmx.org": "^2.0.8",
    "i18n-iso-countries": "^7.14.0",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "tsyringe": "^4.10.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.2",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "8.0.2",
    "@types/chai-jest-snapshot": "^1.3.8",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.25",
    "@types/nodemailer": "^7.0.4",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "chai": "^6.2.1",
    "chai-as-promised": "8.0.2",
    "chai-jest-snapshot": "^2.0.0",
    "concurrently": "^9.2.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "mocha": "^11.7.5",
    "pino-pretty": "^13.1.2",
    "playwright": "^1.56.1",
    "playwright-ctrf-json-reporter": "^0.0.26",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.8.1",
    "typescript": "^5.9.3",
    "undici": "^7.16.0",
    "yaml": "^2.8.1"
  }
}
