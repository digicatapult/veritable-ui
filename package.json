{
  "name": "veritable-ui",
  "version": "0.1.10",
  "description": "UI for Veritable",
  "main": "src/index.ts",
  "type": "commonjs",
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "engines": {
    "node": "^22.0.0",
    "npm": "^10.0.0"
  },
  "scripts": {
    "depcheck": "depcheck",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./src/**/*.test.ts",
    "check": "npm run tsoa:build && tsc --noEmit",
    "build": "npm run tsoa:build && tsc",
    "tsoa:build": "tsoa spec-and-routes",
    "tsoa:watch": "node --watch-path=./src ./node_modules/.bin/tsoa -- spec-and-routes",
    "dev": "npm run tsoa:watch & NODE_ENV=dev node --import=tsimp/import --watch src/index.ts",
    "start": "node build/index.js",
    "db:cmd": "node ./node_modules/.bin/knex",
    "db:migrate": "npm run db:cmd -- migrate:latest",
    "db:rollback": "npm run db:cmd -- migrate:rollback",
    "db:seed": "npm run db:cmd -- seed:run",
    "lint": "prettier -c ./src ./test ./seeds ./migrations",
    "lint:fix": "npm run lint -- -w",
    "xss-scan": "xss-scan"
  },
  "dependencies": {
    "@digicatapult/tsoa-oauth-express": "^0.1.0",
    "@kitajs/html": "^4.1.0",
    "@kitajs/ts-html-plugin": "^4.0.1",
    "@tsoa/runtime": "^6.2.1",
    "@types/compression": "^1.7.5",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "htmx.org": "^1.9.12",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "knex": "^3.1.0",
    "pg": "^8.11.5",
    "pino": "^9.0.0",
    "pino-http": "^10.1.0",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.1",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/chai": "^4.3.16",
    "@types/chai-jest-snapshot": "^1.3.8",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.10",
    "@types/sinon": "^17.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "chai": "^5.1.0",
    "chai-jest-snapshot": "^2.0.0",
    "depcheck": "^1.4.7",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "sinon": "^17.0.1",
    "tsimp": "^2.0.11",
    "undici": "^6.16.1"
  }
}
